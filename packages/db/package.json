{
  "name": "@nexly/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./prisma": {
      "types": "./generated/prisma/index.d.ts",
      "default": "./generated/prisma/index.js"
    }
  },
  "scripts": {
    "cleanup": "del-cli generated --force || exit 0",
    "seed": "pnpm prisma:reset && pnpm prisma:generate && ts-node --project tsconfig.json scripts/seed.ts",
    "prisma:generate": "zenstack generate --schema schema.zmodel",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma --name ",
    "prisma:reset": "prisma migrate reset --schema prisma/schema.prisma --force --skip-seed",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@nexly/eslint-config": "workspace:*",
    "@nexly/typescript-config": "workspace:*",
    "@prisma/client": "^6.17.1",
    "@zenstackhq/runtime": "2.20.1",
    "graphql-type-json": "^0.3.2",
    "prisma-graphql-type-decimal": "^3.0.1",
    "prisma-nestjs-graphql": "^21.2.0",
    "zenstack": "^2.21.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^24.7.2",
    "del-cli": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
